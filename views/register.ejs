<div class="container">
      <div class="row">
        <div class="card col-6 align-self-center">
            <img class="card-img-top mt-2" src="/img/registerImg.jpg"  alt="Card image cap">
            <div class="card-body ">
              <p class="card-text text-center pt-3">Welcome to the Registration Page of the Application. To register fill the details carefully, uploading image is optional but all the other fields except image upload are mandatory. If you are already resgister then, click on login page for login. Thank You.</p>
            </div>
        </div>
        <div class="col-5 offset-1 card p-2 p-sm-5 justify-content-center">
          <% if (typeof msg == 'undefined' ? false : true) { %> 
            <div class="alert alert-danger text-center" role="alert">
              <%= msg %>
            </div>
            <% } %>
          <h3 class="card-title text-center mb-2 fw-light fs-5 fw-bold">Register</h3>
          <form method="post" accept="/register" id="form" enctype="multipart/form-data">
            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="floatingInputUsername"
                placeholder="myusername"
                name="name"
                autocomplete="off"
                required
                autofocus
              />
              <label for="floatingInputUsername">Name</label>
            </div>

            <div class="form-floating mb-3">
              <input
                type="email"
                class="form-control"
                id="floatingInputEmail"
                placeholder="name@example.com"
                name="email"
                autocomplete="off"
                required
              />
              <label for="floatingInputEmail">Email</label>
            </div>

            <div class="form-floating mb-3">
              <input
                type="text"
                class="form-control"
                id="floatingInputEmail"
                placeholder="A"
                name="section"
                autocomplete="off"
              />
              <label for="floatingInputSection">section</label>
            </div>

            <div class="form-floating mb-3">
              <input
                type="number"
                class="form-control"
                id="floatingInputEmail"
                placeholder="2023"
                name="batch"
                autocomplete="off"
              />
              <label for="floatingInputBatch">Batch</label>
            </div>

            <hr />

            <div class="form-floating mb-3">
              <input
                type="password"
                class="form-control"
                id="floatingPassword"
                placeholder="Password"
                autocomplete="nope"
                name="password"
                autocomplete="off"
                required
              />
              <label for="floatingPassword">Password</label>
            </div>

            <div class="form-floating mb-3">
              <input
                type="password"
                class="form-control"
                id="floatingPasswordConfirm"
                placeholder="Confirm Password"
                name="cpassword"
                autocomplete="off"
                required
              />
              <label for="floatingPasswordConfirm">Confirm Password</label>
            </div>

            <div class="form-floating mb-3">
              <input
                type="file"
                class="form-control"
                id="floatingPasswordConfirm"
                name="image"
                />
            </div>

            <div class="d-grid mb-2">
              <button
                class="btn btn-lg btn-primary btn-login fw-bold text-uppercase"
                type="submit"
              >
                Register
              </button>
            </div>

            <a class="d-block text-center mt-2 small" href="/login"
              >Have an account? Sign In</a
            >
          </form>
        </div>
      </div>
</div>

